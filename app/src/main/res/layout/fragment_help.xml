<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    tools:context="com.zenlabs.z5x5.Fragment.HelpFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/intro_back_color"
            android:id="@+id/linearLayout4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTACT US"
            android:id="@+id/btn_contact_us"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="@color/intro_back_color"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <com.zenlabs.z5x5.CustomView.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/help_description"
            android:id="@+id/textView89"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            font:customFont="Stratum2-Regular.otf"/>

        <com.zenlabs.z5x5.CustomView.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The following are some helpful resources:"
            android:id="@+id/textView97"
            android:layout_below="@+id/textView89"
            android:layout_alignLeft="@+id/textView89"
            android:layout_alignStart="@+id/textView89"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            font:customFont="Stratum2-Regular.otf"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textView97"
            android:layout_marginTop="16dp"
            android:id="@+id/relativeLayout9">

            <Button
                android:layout_width="102dp"
                android:layout_height="28dp"
                android:id="@+id/button"
                android:background="@drawable/youtube_squat"
                android:layout_alignTop="@+id/button2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="108dp"
                android:layout_height="28dp"
                android:background="@drawable/youtube_deadlift"
                android:id="@+id/button2"
                android:layout_above="@+id/button4"
                android:layout_alignLeft="@+id/button4"
                android:layout_marginBottom="16dp" />

            <Button
                android:layout_width="132dp"
                android:layout_height="28dp"
                android:background="@drawable/youtube_bench"
                android:id="@+id/button3"
                android:layout_centerVertical="true" />

            <Button
                android:layout_width="128dp"
                android:layout_height="28dp"
                android:background="@drawable/youtube_barbell"
                android:id="@+id/button4"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/button3"
                android:layout_marginLeft="16dp" />

            <Button
                android:layout_width="148dp"
                android:layout_height="28dp"
                android:background="@drawable/youtube_overhead"
                android:id="@+id/button5"
                android:layout_below="@+id/button3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp" />
        </RelativeLayout>

        <com.zenlabs.z5x5.CustomView.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our favorite and recommended books:"
            android:id="@+id/textView98"
            android:layout_below="@+id/relativeLayout9"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            font:customFont="Stratum2-Regular.otf"
            android:layout_alignLeft="@+id/textView97" />

        <Button
            android:layout_width="184dp"
            android:layout_height="28dp"
            android:id="@+id/button6"
            android:layout_below="@+id/textView98"
            android:layout_alignLeft="@+id/relativeLayout9"
            android:layout_alignStart="@+id/relativeLayout9"
            android:layout_marginTop="16dp"
            android:background="@drawable/book_leopard"/>

        <Button
            android:layout_width="136dp"
            android:layout_height="28dp"
            android:background="@drawable/book_strength"
            android:id="@+id/button7"
            android:layout_below="@+id/button6"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignStart="@+id/button6"
            android:layout_marginTop="16dp" />

    </RelativeLayout>
</FrameLayout>
